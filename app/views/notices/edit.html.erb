<%= render "shared/header" %>
<%= render "shared/second-header" %>

<h3>重要なお知らせ　編集</h3>
<p>お知らせ内容を編集してください</p>
<%= form_with model: @notice, local: true do |form| %>
  <div class="title">
    <%= form.label :notice_title, "タイトル" %>
    <%= form.text_field :notice_title, placeholder: "30文字まで", maxlength: "30" %>
  </div>
  <div class="text">
    <%= form.label :notice_text, "本文" %>
    <%= form.text_area :notice_text, placeholder: "", rows: "7" %>
  </div>
  <div class="submit">
    <%= form.submit "編集" %>
  </div>
<% end %>