<%# CSS・・・assets/stylesheets/shared/notice_form.css %>

<%= form_with model: @notice, local: true do |f| %>
<div class='form-wrap'>

  <div class='form-header'>
    <h1 class='form-header-text'>
      お知らせ入力
    </h1>
  </div>

  <% render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">タイトル</label>
    </div>
    <%= f.text_field :notice_title, maxlength: "30" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">本文</label>
    </div>
    <%= f.text_field :notice_text, rows: "7" %>
  </div>

  <div class="submit-btn">
    <%= f.submit "お知らせを投稿する", class: "submit" %>
  </div>
  
</div>
<% end %>
