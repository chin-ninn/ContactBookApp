<%# CSS・・・assets/stylesheets/shared/notice_form.css %>

<%= form_with model: @notice, local: true do |form| %>
  <div class="title">
    <%= form.label :notice_title, "タイトル" %>
    <%= form.text_field :notice_title, maxlength: "30" %>
  </div>
  <div class="text">
    <%= form.label :notice_text, "本文" %>
    <%= form.text_area :notice_text, rows: "7" %>
  </div>
  <div class="submit">
    <%= form.submit "お知らせを投稿する" %>
  </div>
<% end %>