<%# CSS・・・assets/stylesheets/shared/photo_form.css %>

<%= form_with model: @photo, id: 'photo_form', local: true do |f| %>
<div class='form-wrap'>

  <div class='form-header'>
    <h1 class='form-header-text'>
      写真入力
    </h1>
  </div>

  <% render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">写真を選ぶ</label>
    </div>
    <%= f.file_field :image, multiple: true, class: 'photo_file', name: 'photo[images][]', data: {index: 0} %>
  </div>

  <!--<div class="previews">
    <div id="previews"></div>
  </div>-->

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">コメント</label>
    </div>
    <%= f.text_area :photo_text, class: 'form_text', rows: '7' %>
  </div>

  <div class="submit-btn">
    <%= f.submit '写真を投稿する', class: 'submit' %>
  </div>

</div>
<% end %>

